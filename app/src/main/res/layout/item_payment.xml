<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="?attr/selectableItemBackground">

    <!-- S.N. Column -->
    <TextView
        android:id="@+id/text_serial_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.08"
        android:layout_gravity="center_vertical"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginEnd="4dp"
        tools:text="1" />

    <!-- Worker Column -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.32"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginEnd="4dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_worker"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_person"
            app:civ_border_color="@color/primary"
            app:civ_border_width="1dp"
            android:layout_marginEnd="4dp" />

        <TextView
            android:id="@+id/text_worker_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="John Doe" />
    </LinearLayout>

    <!-- Date Column -->
    <TextView
        android:id="@+id/text_payment_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.20"
        android:layout_gravity="center_vertical"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="12sp"
        android:layout_marginEnd="4dp"
        tools:text="May 5, 2023" />

    <!-- Amount Column -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.25"
        android:orientation="horizontal"
        android:gravity="end|center_vertical"
        android:layout_marginEnd="4dp">

        <TextView
            android:id="@+id/icon_rupee"
            style="@style/RupeeSymbol.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:textSize="12sp"
            android:textColor="@color/success" />

        <TextView
            android:id="@+id/text_payment_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/success"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="1,500.00" />
    </LinearLayout>

    <!-- Action Column -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.15"
        android:layout_gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_view_payment"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            app:icon="@drawable/ic_payment_history_nav"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="18dp"
            app:cornerRadius="18dp"
            android:background="@drawable/button_payment_action_background"
            app:backgroundTint="@null"
            android:layout_gravity="center" />
    </FrameLayout>

    <!-- Hidden details for use in other screens -->
    <TextView
        android:id="@+id/text_payment_details"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        tools:text="For: April 2023 | Mode: Cash" />
</LinearLayout>
