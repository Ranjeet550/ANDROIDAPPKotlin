<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="?attr/selectableItemBackground">

    <!-- Serial Number Column -->
    <TextView
        android:id="@+id/text_site_sn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.08"
        android:layout_gravity="center_vertical"
        android:textStyle="bold"
        android:layout_marginEnd="4dp"
        tools:text="1" />

    <!-- Name Column -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.22"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="4dp">

        <TextView
            android:id="@+id/text_site_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Downtown High-rise Project" />

        <TextView
            android:id="@+id/text_site_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="123 Main Street, Downtown" />
    </LinearLayout>

    <!-- Client Column -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.22"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="4dp">

        <TextView
            android:id="@+id/text_site_client"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textStyle="bold"
            tools:text="ABC Development Corp." />

        <TextView
            android:id="@+id/text_site_client_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="9876543210" />
    </LinearLayout>

    <!-- Start Date Column -->
    <TextView
        android:id="@+id/text_site_start_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.18"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginEnd="4dp"
        tools:text="2023-01-15" />

    <!-- Status Column -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.15"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="4dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_site_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:textSize="12sp"
            android:layout_gravity="center"
            tools:text="Active" />
    </FrameLayout>

    <!-- Action Column -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.15"
        android:layout_gravity="center_vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_view_site"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view"
            android:textSize="12sp"
            android:minWidth="0dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_gravity="center"
            android:textColor="@color/primary"
            app:strokeColor="@color/primary" />
    </FrameLayout>

    <!-- Hidden elements for backward compatibility -->
    <TextView
        android:id="@+id/text_site_end_date"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/text_site_workers"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

</LinearLayout>
